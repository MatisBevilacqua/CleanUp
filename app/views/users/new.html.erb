<%= stylesheet_link_tag "login" %>
<h1 id="new"><span>Créer</span> mon compte</h1>
<%= form_for @user do |f| %>
    <%= f.text_field :name, required:true, placeholder: 'Prénom', class: 'log_form'%>
    <%= f.text_field :surname,required:true,  placeholder:'Nom', class: 'log_form' %>
    <%= f.email_field :email,required:true,  placeholder: 'Adresse email', class: 'log_form' %>
    <%= f.password_field :password,required:true,  placeholder: 'Mot de passe', class: 'log_form' %>
  <div id="button">
    <button class="next submit" type="submit">Valider</button>
  </div>
<% end %>
